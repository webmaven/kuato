{
  "manifest_version": 3,
  "name": "Kuato",
  "version": "1.0",
  "description": "QOL enhancements for Nomi.ai.",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://fars.ee/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://beta.nomi.ai/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/pdfjs/pdf.worker.mjs",
        "lib/pdfjs/cmaps/*",
        "lib/epubjs/epub.min.js",
        "lib/epubjs/jszip.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
